@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementAmount { get; set; } = 2;   //1) Add a public property for IncrementAmount with a [Parameter] attribute.

    private void IncrementCount()
    {
        //0) currentCount++;
        currentCount+= IncrementAmount;   //2) Change the IncrementCount method to use the IncrementAmount when incrementing the value of currentCount.
        Console.WriteLine(currentCount);
    }
    
}
